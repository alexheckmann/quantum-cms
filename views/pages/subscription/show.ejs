        <!-- Your organisation -->
        <div class="container">
            <div class="row">
                <h1>Your subscription.</h1>
            </div>
            <div class="">
                <%= message ? message : "" %>
            </div>
            <% if(subscription){ %>
                <div class="">
                    <div class="font-weight-bold">
                        Type:
                    </div>
                    <div class="form-group mt-1 mb-1">
                        <textarea readonly class="form-control grpTextDesc" rows="1"><%= subscription.subType.name %></textarea>
