<div class="d-flex flex-column">
    <div>
        <h1>
            <%= textcontent.title %>
        </h1>
    </div>
    <div class="d-flex justify-content-around">
        <div class="bg-white shape-drop-shadow-straight shape-rounded-corners-big">
            <div class="container">
                <form action="/textcontent/<%= textcontent.id %>/update" method="post">
                    <div>
                        <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
                        <input type="hidden" name="id" value="<%= textcontent.id %>">
                        <div>
                            <label>Title</label>
                        </div>
                        <textarea name="title" type="text" maxlength="80" id="" cols="30"
                                  rows="1"><%= textcontent.title %></textarea>
                        <div>
                            <label>Content</label>
                        </div>
                        <textarea name="content" type="text" maxlength="1024" id="" cols="30"
                                  rows="10"><%= textcontent.content %></textarea>
                    </div>
                    <button class="btn btn-info mt-4 mb-4" type="submit">
                        Save
                    </button>
                </form>
            </div>
        </div>
        <div>
            <div class="bg-white shape-rounded-corners-big d-flex shape-drop-shadow-straight">
                <div class="qntm-pricing-content d-flex flex-column">
                    <h2>Information</h2>
                    <div class="d-flex justify-content-between">
                        <span>Last Updated:</span>
                        <span><%= textcontent.updatedAt %></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Created At:</span>
                        <span><%= textcontent.createdAt %></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Author:</span>
                        <span><%= textcontent.author %></span>
                    </div>
                </div>
            </div>
            <div>

            </div>
        </div>
    </div>
</div>
